@{
    ViewData["Title"] = "Orders";
}

@model IEnumerable<OrderDTO>


<div>
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>მომხმარებელი</th>
                <th>მომხმარებლის ელ-ფოსტა</th>
                <th>მომხმარებლის მისამართი</th>
                <th>შეკვეთის სტატუსი</th>
                <th>მთლიანი ღირებულება</th>
                <th>შექმნის თარიღი</th>
                <th>ცვლილების თარიღი</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Username</td>
                        <td>@item.User</td>
                        <td>@item.UserAddress</td>
                        <td>@item.OrderStatus</td>
                        <td>@item.TotalPrice</td>
                        <td>@item.DateCreated</td>
                        <td>@item.DateChanged</td>
                        <td>
                            <button id="editBtn" class="btn btn-success btn-sm rounded" type="button" data-placement="top" data-toggle="modal" data-target="#orderDetailsModal" title="რედაქტირება" data-id="@item.ID" onclick="getOrderDetails('@item.ID')"><span class="iconify" data-icon="jam:align-justify"></span></button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <!-- Modal -->
    <div class="modal fade" id="orderDetailsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">შეკვეთის დეტალები</h5>
                </div>
                <div id="order-details" class="modal-body">


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">დახურვა</button>
                </div>
            </div>
        </div>
    </div>
</div>